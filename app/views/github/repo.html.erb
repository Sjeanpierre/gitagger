<div class="span10 offset4">
  <h1>My Repo List</h1>
</div>

<div class="container" style="margin-top: 55px">
 <center><table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
    <thead>
    <tr>
      <th width="10%">Repo ID</th>
      <th width="30%">Repo Name</th>
      <th width="20%">Repo Owner</th>
      <th width="20%">Last Push Date</th>
      <th width="17%">Action</th>
    </tr>
    </thead>
    <tbody>
    <%@repos.each do |repo|%>
        <tr>
          <td><%=repo.id%></td>
          <td><%=repo.full_name%></td>
          <td><%=repo.owner.login%></td>
          <td><%=repo.pushed_at.to_date.to_s(:long)%></td>
          <td><div class="btn-group">
            <a class="btn btn-primary" href="<%="/github/#{repo.owner.login}/#{repo.name}/branches" %>"><i class="icon-sitemap icon-white"></i> List Branches</a>
            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="<%="/github/#{repo.owner.login}/#{repo.name}/branch/#{repo.default_branch}/tag" %>"><i class="icon-tag"></i><%= "Tag #{repo.default_branch}" %></a></li>
              <li class="divider"></li>
              <li><a href="<%="/github/#{repo.owner.login}/#{repo.name}/commits" %>"><i class="icon-github"></i> Commits</a></li>
              <li class="divider"></li>
              <li><a href="<%="/github/#{repo.owner.login}/#{repo.name}/tags" %>"><i class="icon-tags"></i> List Tags</a></li>
            </ul>
          </div></td>
        </tr>
    <% end %>
    </tbody>
  </table>
 </center>
</div>