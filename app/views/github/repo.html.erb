<div class="span10 offset4">
  <h1>My Repo List</h1>
</div>

<div class="container" style="margin-top: 10px">
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
    <thead>
    <tr>
      <th width="10%">Repo ID</th>
      <th width="30%">Repo Name</th>
      <th width="30%">Repo Owner</th>
      <th width="15%">Last Push Date</th>
      <th width="15">Action</th>
    </tr>
    </thead>
    <tbody>
    <%@repos.each do |repo|%>
        <tr class="odd gradeC">
          <td><%=repo.id%></td>
          <td><%=repo.full_name%></td>
          <td><%=repo.owner.login%></td>
          <td><%=repo.pushed_at.to_date.to_s(:long)%></td>
          <td><%=link_to "list branches", "/github/#{repo.owner.login}/#{repo.name}/branches" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>