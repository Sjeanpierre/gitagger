<div class="span10 offset4">
  <h1>Commits in <%=@branch_name%></h1>
</div>

<div class="container" style="margin-top: 10px">
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
    <thead>
    <tr>
      <th width="15%">Commit Date</th>
      <th width="20%">Committer Name</th>
      <th width="65%">Commit Message</th>
    </tr>
    </thead>
    <tbody>
    <%@commits.each do |commit|%>
        <tr class="odd gradeC">
          <td><%=commit.commit.author["date"].to_date.to_s(:long)%></td>
          <td><%=commit.commit.committer.name%></td>
          <td><%=commit.commit.message%></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>