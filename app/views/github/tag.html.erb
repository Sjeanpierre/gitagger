<script>$(document).ready(function() {
    var oTable = $('#example').dataTable();
    // Sort immediately with column 2 (at position 1 in the array. More could be sorted with additional array elements
    oTable.fnSort( [ [1,'desc'] ] );
} );

// Using aoColumnDefs
$(document).ready( function() {
    $('#example').dataTable( {
        "aoColumnDefs": [
            { "bSearchable": false, "aTargets": [ 1 ] }
        ] } );
} );</script>

<div class="span10 offset4">
  <h1>Tags in <%=@repo_name%>(<%=@tags.count%>)</h1>
</div>

<div class="container" style="margin-top: 10px">
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
    <thead>
    <tr>
      <th width="80%">Tag Name</th>
      <th width="20%">Actions</th>
    </tr>
    </thead>
    <tbody>
    <%@tags.each do |tag|%>
        <tr class="odd gradeC">
          <td><%=tag.name%></td>
          <td style="text-align:center;"><div class="btn-group">
            <a class="btn btn-primary" href="#"><i class="icon-list icon-white"></i> Tag Details</a>
            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#"><i class="icon-tag"></i>List</a></li>
            </ul>
          </div></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>